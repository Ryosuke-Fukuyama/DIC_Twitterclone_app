<header>
  <%= image_tag "hiyoko.jpeg", class: "logo" %>
  </header>
<h1>投稿一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>内容</th>
  <tr/>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.content %></td>
      <td><%= link_to '詳細', post_path(post.id) %></td>
      <td><%= link_to "編集", edit_post_path(post.id) %></td>
      <td><%= link_to '削除', post_path(post.id),
        method: :delete, class: "button",
        data: { confirm: '削除しますか？' } %>
      </td>
    </tr>
  <% end %>
</table>
<br>
<%= link_to '新規投稿', new_post_path %>
<footer></footer>